<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:elevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:orientation="vertical"
            android:padding="10dp"
            android:clickable="true">

            <TextView
                android:id="@+id/attribute_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="Perfil de usuarios 1"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/view_attribute_values"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver la valoracion de los atributos"
                android:textColor="@color/grey_medium"
                android:paddingBottom="5dp"
                android:textSize="15sp"
                android:background="?android:selectableItemBackground"/>

            <TextView
                android:id="@+id/view_subprofiles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver el detalle de los subperfiles"
                android:textColor="@color/grey_medium"
                android:textSize="15sp"
                android:background="?android:selectableItemBackground"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>